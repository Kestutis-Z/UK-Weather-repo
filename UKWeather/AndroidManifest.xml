<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haringeymobile.ukweather"
    android:installLocation="preferExternal"
    android:versionCode="3"
    android:versionName="0.2.1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_weather"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.haringeymobile.ukweather.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.haringeymobile.ukweather.WeatherInfoActivity"
            android:label="@string/weather_info_activity_name" >
        </activity>
        <activity android:name="com.haringeymobile.ukweather.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <provider
            android:name="com.haringeymobile.ukweather.datastorage.WeatherContentProvider"
            android:authorities="com.haringeymobile.ukweather.provider"
            android:exported="false" />
    </application>

</manifest>