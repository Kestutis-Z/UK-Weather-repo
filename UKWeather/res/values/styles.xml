<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MyListStyle" parent="android:Widget.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/list_divider_height</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    
    <style name="TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkblue4</item>
    </style>
    
    <style name="TextView.LargeText">
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    
    <style name="TextView.LargeText.Background1">
        <item name="android:background">@drawable/background_alternate_odd</item>
    </style>

    <style name="TextView.LargeText.Background2">
        <item name="android:background">@drawable/background_alternate_even</item>
    </style>
    
    <style name="TextView.MediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="TextView.MediumText.Background1">
        <item name="android:background">@drawable/background_alternate_odd</item>
    </style>

    <style name="TextView.MediumText.Background2">
        <item name="android:background">@drawable/background_alternate_even</item>
    </style>
    
    <style name="MainActivity">
        <item name="android:background">@color/grey2</item>
    </style>

</resources>
