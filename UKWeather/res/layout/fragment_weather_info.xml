<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_info_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/gap_small"
    android:background="@color/darkblue2"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city_name_text_view"
            style="@style/LargeText.Background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_small"
            android:layout_marginRight="@dimen/gap_small"
            android:layout_marginTop="@dimen/gap_small"
            android:layout_marginBottom="@dimen/gap_large"
            android:background="@drawable/background_alternate_odd"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/temperature_text_view"
                style="@style/LargeText.Background2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weather_conditions_image_view"
                android:layout_width="@dimen/icon_dimension"
                android:layout_height="@dimen/icon_dimension"
                android:layout_gravity="center"
                android:contentDescription="@string/weather_consitions_icon_content_description" />

            <TextView
                android:id="@+id/weather_conditions_text_view"
                style="@style/LargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/temperature_range_text_view"
            style="@style/MediumText.Background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small" />

        <TextView
            android:id="@+id/atmospheric_pressure_text_view"
            style="@style/MediumText.Background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small" />

        <TextView
            android:id="@+id/humidity_text_view"
            style="@style/MediumText.Background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small" />

        <TextView
            android:id="@+id/city_location_text_view"
            style="@style/MediumText.Background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small" />
    </LinearLayout>

</ScrollView>