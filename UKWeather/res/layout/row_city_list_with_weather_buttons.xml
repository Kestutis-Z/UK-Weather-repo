<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/city_name_in_list_row_text_view"
        style="@style/TextView.LargeText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="false" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/city_current_weather_button"
            style="@style/CityWeatherImageButton"
            android:layout_margin="@dimen/gap_small"
            android:layout_weight="1"
            android:contentDescription="@string/icon_content_description_current_weather_conditions"
            android:src="@drawable/refresh" >
        </ImageButton>

        <ImageButton
            android:id="@+id/city_daily_weather_forecast_button"
            style="@style/CityWeatherImageButton"
            android:layout_margin="@dimen/gap_small"
            android:layout_weight="1"
            android:contentDescription="@string/icon_content_description_weather_forecast"
            android:src="@drawable/forecast_daily" >
        </ImageButton>

        <ImageButton
            android:id="@+id/city_three_hourly_weather_forecast_button"
            style="@style/CityWeatherImageButton"
            android:layout_margin="@dimen/gap_small"
            android:layout_weight="1"
            android:contentDescription="@string/icon_content_description_weather_forecast"
            android:src="@drawable/forecast_three_hourly" >
        </ImageButton>
    </LinearLayout>

</LinearLayout>